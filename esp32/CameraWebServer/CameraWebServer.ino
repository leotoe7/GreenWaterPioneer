char rx_ch = 0, rx_begin = 0;;
void Serial_callback() {
  while (Serial.available()) {
    rx_ch = Serial.read();
    if (rx_begin == 1) {
      if (rx_ch == 0xB1) {
        rx_end = 1;
        rx_begin = 0;
        //uart_data[count] = '\0';
        strcpy(json_buf, uart_data);
        memset(uart_data, '\0', 512);
        count = 0;
      }
      else {
        uart_data[count] = rx_ch;
        count ++;
        if (count == 512)
          count = 0;
      }
    }
    else if (rx_ch == 0xB0) {
      rx_begin = 1;
    }
  }
}
